# test/OMakefile

.PHONY: all clean format test
OCAMLINCLUDES += ../src

USE_OCAMLFIND = true

# Build an OCaml program
FILES[] =
	testUtil
	extOpt_spec
	extList_spec
	extStr_spec
	extSet_spec
	nel_spec

OCAMLPACKS[] =
	oUnit

PROGRAM = a.out
OCAML_LIBS += ../src/target
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS +=
# OCAML_LIB_FLAGS +=
#
.DEFAULT: all

all: $(OCamlProgram $(PROGRAM), $(FILES))


clean:
	find . -name "*.cm[ioxat]*" -o -name "*.out" -o -name "*.opt" -o -name "*.[ao]" \
	| xargs $(RM)

format:
	find . -name "*.ml" -o -name "*.mli" \
	| xargs ocamlformat -i

test: all
	./$(PROGRAM)
